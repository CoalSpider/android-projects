<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Main_View"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.ben.game.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <com.ben.game.MyGLSurfaceView
        android:id="@+id/GLSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/EndDraw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="endDraw"
            android:text="Button"/>

        <Button
            android:id="@+id/ClearScreen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="clearScreen"
            android:text="Button"/>

        <Button
            android:id="@+id/StartDraw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="startDraw"
            android:text="Button"/>

    </LinearLayout>

    <com.ben.game.CustomJoystickView
        android:id="@+id/CustomView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

</android.widget.FrameLayout>
